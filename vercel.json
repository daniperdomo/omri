{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/server/server.js" }],
  "redirects": [
    {
      "source": "omrivzla.com",
      "destination": "https://www.omrivzla.com",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/assets/.*\\.[a-f0-9]+\\.(js|css|jpg|png|svg|gif|webp|avif)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ]
}